{
  "name": "caret-scroller",
  "displayName": "Caret Scroller",
  "description": "Keeps your cursor fixed at a specific position in the viewport while scrolling through code",
  "version": "0.0.5",
  "publisher": "wHoOoHW",
  "repository": {
    "type": "git",
    "url": "https://github.com/wHoooHw/caret-scroller"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],

"contributes": {
  "commands": [
  {
    "command": "caretScroller.toggle",
    "title": "Toggle Caret Scroller"
  },
  {
    "command": "caretScroller.setPosition",
    "title": "Set Caret Scroller Position"
  },
  {
    "command": "caretScroller.forceCursorToTop",
    "title": "Force Cursor To Top Position"
  }
],
"keybindings": [
  {
    "command": "caretScroller.toggle",
    "key": "ctrl+alt+cmd+t",
    "mac": "ctrl+alt+cmd+t",
    "when": "editorTextFocus"
  },
  {
    "command": "caretScroller.forceCursorToTop",
    "key": "ctrl+alt+cmd+f",
    "mac": "ctrl+alt+cmd+f",
    "when": "editorTextFocus"
  }
]
},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
